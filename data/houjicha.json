        },

        "second_third": [
          {
            "title": "二煎目",
            "temp_c": "約70℃",
            "time": "約30秒",
            "text": "温度を少し上げて短めに抽出します。"
          },
          {
            "title": "三煎目",
            "temp_c": "熱湯",
            "time": "1秒",
            "text": "すっきりとした味わいになります。"
          }
        ],

        "after": "淹れ終わった茶葉は、醤油やポン酢を少し垂らしておひたしとしても楽しめます。"
      }
    }
